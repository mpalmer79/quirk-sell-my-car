# ============================================================
# QUIRK SELL MY CAR - Environment Variables
# ============================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================================
# VIN SOLUTIONS CRM INTEGRATION
# ============================================================
# Get these from your VIN Solutions account manager
# Documentation: https://developer.vinsolutions.com/

VINSOLUTIONS_API_KEY=your_api_key_here
VINSOLUTIONS_DEALER_ID=your_dealer_id_here
VINSOLUTIONS_USER_ID=default_user_id_for_leads
VINSOLUTIONS_WEBHOOK_SECRET=webhook_signature_secret

# ============================================================
# AI CHAT ASSISTANT (OPTIONAL)
# ============================================================
# Anthropic API key for AI-powered chat
# Get from: https://console.anthropic.com/

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================
# VEHICLE IMAGES (OPTIONAL)
# ============================================================
# Pexels API for vehicle images
# Get from: https://www.pexels.com/api/

PEXELS_API_KEY=your_pexels_api_key_here

# ============================================================
# VALUATION APIS (FUTURE)
# ============================================================
# These are placeholders for future real valuation integration

# Black Book API
# BLACKBOOK_API_KEY=your_blackbook_key
# BLACKBOOK_PARTNER_ID=your_partner_id

# KBB API
# KBB_API_KEY=your_kbb_key

# NADA API
# NADA_API_KEY=your_nada_key

# ============================================================
# APPLICATION SETTINGS
# ============================================================

# Base URL for the application (used for webhooks, emails, etc.)
NEXT_PUBLIC_BASE_URL=https://quirk-sell-my-car.vercel.app

# Enable/disable features
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_CRM_INTEGRATION=true

# ============================================================
# RATE LIMITING
# ============================================================
# Redis URL for production rate limiting (optional)
# REDIS_URL=redis://localhost:6379

# ============================================================
# LOGGING (PRODUCTION)
# ============================================================
# DATADOG_API_KEY=your_datadog_key
# LOG_LEVEL=info
